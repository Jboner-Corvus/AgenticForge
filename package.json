{
  "name": "g-forge-monorepo",
  "version": "1.0.0",
  "description": "G-Forge Monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/core"
  ],
  "scripts": {
    "build": "pnpm --recursive run build",
    "dev": "pnpm --filter=./packages/core dev",
    "start": "pnpm --filter=./packages/core start",
    "start:worker": "pnpm --filter=./packages/core start:worker",
    "test": "pnpm --recursive run test",
    "test:unit": "pnpm --recursive run test:unit",
    "test:integration": "pnpm --recursive run test:integration",
    "lint": "pnpm --recursive run lint",
    "typecheck": "pnpm --recursive run typecheck",
    "format": "pnpm --filter=./packages/core format",
    "lint:fix": "pnpm --recursive run lint --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/chokidar": "^2.1.7",
    "@types/event-source-polyfill": "^1.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@types/pg": "^8.15.4",
    "esbuild-fix-imports-plugin": "^1.0.21",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-formatter-compact": "^8.40.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "execa": "^9.0.0",
    "globals": "^15.8.0",
    "playwright-core": "^1.45.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite-plugin-commonjs": "^0.10.4",
    "vite-plugin-environment": "^1.1.3",
    "vite-plugin-istanbul": "^7.1.0",
    "vite-plugin-mock": "^3.0.2",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "jsonwebtoken": "^9.0.2"
  }
}