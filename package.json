{
  "name": "agentic-forge-monorepo",
  "version": "1.0.0",
  "description": "AgenticForge Monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter=./packages/core build",
