# Dockerfile for the Web (UI) service

FROM node:20-alpine
WORKDIR /usr/src/app

# Install pnpm globally
RUN npm install -g pnpm

# Copy all files
COPY . .

# Install all dependencies
RUN pnpm install

# Build the UI
RUN pnpm --filter ui run build

EXPOSE 3000

# Command to start the web service
CMD [ "pnpm", "--filter", "ui", "run", "start:web" ]