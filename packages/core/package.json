{
  "name": "@gforge/core",
  "version": "1.0.0",
  "description": "G-Forge Core Backend",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "start": "node dist/webServer.js",
    "start:dev": "NODE_ENV=development tsx src/server-start.ts",
    "dev": "NODE_ENV=development nodemon --watch src --exec tsx src/server-start.ts",
    "build": "NODE_OPTIONS=--max-old-space-size=12288 pnpm exec tsup && node scripts/copy-assets.js",
    "clean": "rm -rf dist",
    "start:worker:dev": "NODE_ENV=development node --loader ts-node/esm src/worker.ts",
    "start:worker": "node dist/worker.js",
    "test": "vitest run",
    "test:unit": "vitest run --mode unit",
    "test:integration": "vitest run --mode integration",
    "test:tools": "NODE_ENV=development tsx src/test-tools.ts",
    "lint": "eslint --fix --max-warnings 0 --no-warn-ignored src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/ && eslint --fix src/"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.62.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "0.203.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "0.203.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-metrics": "2.0.1",
    "@opentelemetry/sdk-node": "0.203.0",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "bullmq": "^5.56.4",
    "cheerio": "^1.1.2",
    "chokidar": "^4.0.3",
    "cookie-parser": "^1.4.7",
    "dockerode": "^4.0.7",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "fastmcp": "^3.8.5",
    "ioredis": "^5.6.1",
    "jsdom": "^24.1.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.0.0",
    "pino": "^9.7.0",
    "playwright": "^1.54.1",
    "puppeteer": "^24.15.0",
    "uuid": "^11.1.0",
    "vitest-mock-extended": "^1.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.1",
    "@sebbo2002/semantic-release-jsr": "^3.0.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/dockerode": "^3.3.42",
    "@types/express": "^4.17.23",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^24.0.13",
    "@types/puppeteer": "^7.0.4",
    "@types/supertest": "^6.0.2",
    "@types/uri-templates": "^0.1.34",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.33",
    "@valibot/to-json-schema": "^1.3.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@wong2/mcp-cli": "^1.12.0",
    "arktype": "^2.1.20",
    "eslint-plugin-prettier": "^5.5.1",
    "eventsource-client": "^1.1.3",
    "fs-extra": "^11.2.0",
    "get-port-please": "^3.2.0",
    "jiti": "^2.4.2",
    "jsr": "^0.13.5",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "semantic-release": "^24.2.7",
    "supertest": "^7.0.0",
    "tsx": "^4.20.3",
    "valibot": "^1.1.0",
    "vitest": "^3.2.4",
    "zod-to-json-schema": "^3.23.0"
  }
}