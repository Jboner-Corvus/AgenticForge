{
  "name": "@agenticforge/core",
  "version": "1.0.0",
  "description": "AgenticForge Core Backend",
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "NODE_ENV=development node --loader ts-node/esm src/server.ts",
    "dev": "NODE_ENV=development nodemon --watch src --exec node --loader ts-node/esm src/server.ts",
    "build": "NODE_OPTIONS=--max-old-space-size=8192 pnpm exec tsup && cp src/prompts/system.prompt.txt dist/",
    "clean": "rm -rf dist",
    "start:worker:dev": "NODE_ENV=development node --loader ts-node/esm src/worker.ts",
    "start:worker": "node dist/worker.js",
    "test": "vitest run",
    "lint": "eslint --fix \"src/**/*.ts\"",
    "format": "prettier --write src/ && eslint --fix src/"
  },
  "dependencies": {
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.62.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "0.203.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "0.203.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-metrics": "2.0.1",
    "@opentelemetry/sdk-node": "0.203.0",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "bullmq": "^5.56.4",
    "chokidar": "^4.0.3",
    "cookie-parser": "^1.4.7",
    "dockerode": "^4.0.7",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "fastmcp": "^3.8.5",
    "ioredis": "^5.6.1",
    "pino": "^9.7.0",
    "playwright": "^1.54.1",
    "uuid": "^11.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.1",
    "@sebbo2002/semantic-release-jsr": "^3.0.0",
    "@tsconfig/node22": "^22.0.2",
    
    
    "@types/cookie-parser": "^1.4.9",
    "@types/dockerode": "^3.3.42",
    "@types/express": "^5.0.3",
    "@types/uri-templates": "^0.1.34",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.33",
    "@valibot/to-json-schema": "^1.3.0",
    "@wong2/mcp-cli": "^1.12.0",
    "arktype": "^2.1.20",
    "eslint-plugin-prettier": "^5.5.1",
    "eventsource-client": "^1.1.3",
    "get-port-please": "^3.2.0",
    "jiti": "^2.4.2",
    "jsr": "^0.13.5",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "semantic-release": "^24.2.7",
    "tailwindcss": "^4.1.11",
    "valibot": "^1.1.0"
  }
}